<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/blueScuro</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>

        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>

    </style>
    <!-- Base application theme. -->

    <!--Action Bar "invisibile" -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blueChiaro</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="background">@color/blueChiaro</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/ic_toggle_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButton"  parent="android:Theme">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>



    <style name="CustomTabPageIndicator">
        <item name="footerColor">@color/blueChiaro</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="footerLineHeight">2dp</item>
        <item name="footerIndicatorHeight">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:dividerPadding">0dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="selectedColor">@color/blueScuro</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="selectedBold">true</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">normal</item>

    </style>

</resources>


