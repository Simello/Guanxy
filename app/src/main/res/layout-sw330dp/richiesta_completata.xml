<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/blueChiaro">
	
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Grazie"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:layout_marginTop="5dp"
        android:id="@+id/textGrazie"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/richiesta_completata"
        android:layout_below="@+id/textGrazie"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:id="@+id/textRichiestaCompletata"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />
    <Button
        android:text="@string/title_section1"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_height="60dp"
        android:layout_width="120dp"
        android:background="@drawable/button_selector"
        android:id="@+id/guanxy"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/divider1"
        android:background="@drawable/divider"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/guanxy"
        android:layout_toRightOf="@+id/guanxy"
        android:layout_alignTop="@+id/guanxy" />

    <Button
        android:text="@string/title_section2"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/button_selector"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:id="@+id/punti"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/divider1"
        android:layout_toRightOf="@+id/divider1"/>

    <Button
        android:text="@string/title_section3"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/button_selector"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:textAllCaps="false"
        android:shadowRadius="5"
        android:id="@+id/guida"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/divider2"
        android:layout_toRightOf="@+id/divider2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/divider2"
        android:background="@drawable/divider"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/punti"
        android:layout_toRightOf="@+id/punti"
        android:layout_alignTop="@+id/punti" />

    <Button
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="OK"
        android:textColor="@color/white"
        android:background="@drawable/button_invia_tondo"
        android:id="@+id/buttonOk"
        android:layout_below="@+id/textRichiestaCompletata"
        android:layout_centerHorizontal="true" />
</RelativeLayout>