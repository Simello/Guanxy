<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueChiaro"
    tools:context=".MainActivity$PlaceholderFragment">

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/buttonTextPremi"
        android:src="@drawable/aiuta_gli_altri"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/chiediAiuto"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/chiediAiuto"
        android:src="@drawable/chiedi_aiuto"
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:textStyle="bold"
        android:text="@string/chiedi_aiuto"
        android:textColor="@color/white"
        android:id="@+id/chiediAiutoString"
        android:src="@drawable/button_aiuto"
        android:background="@null"
        android:textAllCaps="false"
        android:textSize="25sp"
        style="?android:attr/borderlessButtonStyle"


        android:clickable="false"
        android:layout_alignTop="@+id/chiediAiuto"
        android:layout_toRightOf="@+id/chiediAiuto"
        android:layout_toEndOf="@+id/chiediAiuto"
        android:layout_alignBottom="@+id/chiediAiuto" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:textStyle="bold"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="@string/cerca_aiuti"
        android:textColor="@color/white"
        android:id="@+id/aiutaGliAltriString"
        android:src="@drawable/button_aiuto"
        android:background="@null"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:layout_alignBottom="@+id/buttonTextPremi"
        android:layout_alignLeft="@+id/chiediAiutoString"
        android:layout_alignStart="@+id/chiediAiutoString"
        android:layout_alignTop="@+id/buttonTextPremi"
        android:layout_marginStart="0px"
        android:layout_marginLeft="0px"/>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/divider1"
        android:layout_alignBottom="@+id/guanxy"
        android:layout_alignTop="@+id/guanxy"
        android:layout_alignEnd="@+id/guanxy"
        android:layout_alignRight="@+id/guanxy"
        android:background="@drawable/divider"/>


    <Button
        android:text="@string/title_section1"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_height="60dp"
        android:layout_width="100dp"
        android:background="@drawable/button_selector"
        android:id="@+id/guanxy"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/divider1"
        android:layout_alignBottom="@+id/guanxy"
        android:layout_alignTop="@+id/guanxy"
        android:layout_alignEnd="@+id/guanxy"
        android:layout_alignRight="@+id/guanxy"
        android:background="@drawable/divider"/>

    <Button
        android:text="@string/title_section2"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:background="@drawable/button_selector"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:id="@+id/punti"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/divider1"
        android:layout_toRightOf="@+id/divider1"/>

    <Button
        android:text="@string/title_section3"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/button_selector"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:id="@+id/guida"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/divider2"
        android:layout_toRightOf="@+id/divider2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/divider2"
        android:background="@drawable/divider"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/punti"
        android:layout_toRightOf="@+id/punti"
        android:layout_alignTop="@+id/punti" />

</RelativeLayout>
