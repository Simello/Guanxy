<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/blueChiaro">


    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingCompleta"
        android:numStars="5"
        android:stepSize="0.5"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assegna dei punti:"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:id="@+id/textView5"
        android:layout_above="@+id/ratingCompleta"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invia"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:padding="10dp"
        android:id="@+id/buttonInviaCompletaRichiesta"
        android:background="@drawable/button_invia_tondo"
        android:layout_below="@+id/ratingCompleta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />
</RelativeLayout>